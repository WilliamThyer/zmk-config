                cmds: cmds {
                        compatible = "zmk,behavior-macro";
                        label = "cmds";
                        #binding-cells = <0>;
                        wait-ms = <30>;
                        tap-ms = <40>;
                        bindings  
                                = <&macro_press &kp LCMD>
                                , <&macro_tap &kp S>
                                , <&macro_release &kp LCMD>
                                ;
                        
