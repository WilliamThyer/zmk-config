#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        macros {
                copy: copy {
                        compatible = "zmk,behavior-macro";
                        label = "copy";
                        #binding-cells = <0>;
                        wait-ms = <30>;
                        tap-ms = <40>;
                        bindings  
                                = <&macro_press &kp LCMD>
                                , <&macro_tap &kp C>
                                , <&macro_release &kp LCMD>
                                ;
                        
                }; 

                paste: paste {
                        compatible = "zmk,behavior-macro";
                        label = "paste";
                        #binding-cells = <0>;
                        wait-ms = <30>;
                        tap-ms = <40>;
                        bindings  
                                = <&macro_press &kp LCMD>
                                , <&macro_tap &kp V>
                                , <&macro_release &kp LCMD>
                                ;
                        
                }; 

                cut: cut {
                        compatible = "zmk,behavior-macro";
                        label = "cut";
                        #binding-cells = <0>;
                        wait-ms = <30>;
                        tap-ms = <40>;
                        bindings  
                                = <&macro_press &kp LCMD>
                                , <&macro_tap &kp X>
                                , <&macro_release &kp LCMD>
                                ;
                        
