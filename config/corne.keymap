                screengrab: screengrab {
                        compatible = "zmk,behavior-macro";
                        label = "screengrab";
                        #binding-cells = <0>;
                        wait-ms = <30>;
                        tap-ms = <40>;
                        bindings  
                                = <&macro_press &kp LCMD &kp LSHIFT>
                                , <&macro_tap &kp 4>
                                , <&macro_release &kp LCMD &kp LSHIFT>
                                ;
                        
